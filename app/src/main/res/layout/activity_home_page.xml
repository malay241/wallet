<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".HomePage"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="30dp"
        android:padding="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:text="Welcome"/>
        <TextView
            android:id="@+id/home_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textSize="30dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shapehome"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:onClick="openwallet"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/login_image"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:padding="10dp"
            android:src="@drawable/f"/>

        <TextView
            android:id="@+id/home_wallet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/ic_baseline_currency_rupee_24"
            android:padding="10dp"
            android:text="100"
            android:textColor="@color/black"
            android:textSize="40dp" />
        <ImageView
            android:id="@+id/add_money_icon"
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:paddingTop="5dp"
            android:layout_marginStart="130dp"
            android:onClick="openwallet"
            android:src="@drawable/ic_baseline_add_circle_24" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"

        android:layout_marginEnd="10dp"
        android:orientation="horizontal">
        android:background="@drawable/shape2"
        android:layout_marginEnd="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="87dp"
            android:orientation="horizontal">
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="opensendMoney">


                <ImageView
                    android:id="@+id/login_send"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/h" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/login_send"
                    android:text="Send money"
                    android:padding="10dp"
                    android:textColor="@color/black"/>

            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="openbillpayment">

                <ImageView
                    android:id="@+id/login_bill"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/d" />

                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/login_bill"
                    android:text="Bill Payment"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="opensplitpay">

                <ImageView
                    android:id="@+id/login_split"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:padding="10dp"
                    android:src="@drawable/g" />
                <TextView
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_below="@+id/login_split"
                    android:text="Split bill"
                    android:padding="10dp"
                    android:textColor="@color/black"/>
            </RelativeLayout>
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:background="@drawable/shape2"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        >
        <TextView
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:text="Recent Transactions"
            android:textColor="@color/black"
            android:padding="10dp"
            android:textSize="20dp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape3">
    </RelativeLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/shape3">
        <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            >
        </RelativeLayout>
    </ScrollView>

</LinearLayout>